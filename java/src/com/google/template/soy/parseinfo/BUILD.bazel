load("@rules_java//java:defs.bzl", "java_library")

package(default_visibility = ["//:soy_internal"])

NAME_SRC = ["TemplateName.java"]

java_library(
    name = "parseinfo",
    deprecation = "Soy Info objects are deprecated, use the invocation builder API instead.",
    visibility = ["//visibility:public"],
    exports = [":impl"],
)

java_library(
    name = "impl",
    srcs = glob(
        ["*.java"],
        exclude = NAME_SRC,
    ),
    visibility = ["//visibility:private"],
    deps = [
        ":name",
        "@com_google_protobuf//:protobuf_java",
        "@maven_closure_templates//:com_google_errorprone_error_prone_annotations",
        "@maven_closure_templates//:com_google_guava_guava",
    ],
)

java_library(
    name = "name",
    srcs = NAME_SRC,
    visibility = ["//visibility:public"],
    deps = [
        "//java/src/com/google/template/soy/data:template",
        "@com_google_auto_value_auto_value",
        "@com_google_auto_value_auto_value_annotations//jar",
        "@maven_closure_templates//:com_google_errorprone_error_prone_annotations",
    ],
)
