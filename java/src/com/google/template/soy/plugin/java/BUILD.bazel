load("@rules_java//java:defs.bzl", "java_library")

package(default_visibility = ["//:soy_internal"])

EXTERN_HELPERS_SRCS = [
    "RenderCssHelper.java",
    "SharedExternRuntime.java",
]

REFLECTIVE_SRCS = ["ReflectiveMethodChecker.java"]

java_library(
    name = "java",
    srcs = glob(
        ["*.java"],
        exclude = REFLECTIVE_SRCS + EXTERN_HELPERS_SRCS,
    ),
    deps = [
        "//java/src/com/google/template/soy/base/internal",
        "@com_google_auto_value_auto_value",
        "@com_google_auto_value_auto_value_annotations//jar",
        "@maven_closure_templates//:com_google_guava_guava",
    ],
)

java_library(
    name = "reflective",
    srcs = REFLECTIVE_SRCS,
    deps = [
        "//java/src/com/google/template/soy/plugin/java/internal",
    ],
)

java_library(
    name = "extern_helpers",
    srcs = EXTERN_HELPERS_SRCS,
    deps = [
        "//java/src/com/google/template/soy/data",
        "@maven_closure_templates//:com_google_code_findbugs_jsr305",
        "@maven_closure_templates//:com_google_errorprone_error_prone_annotations",
        "@maven_closure_templates//:com_google_guava_guava",
    ],
)
